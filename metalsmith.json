{
  "source": "./contents",
  "destination": "/.",
  "metadata": {
    "title": "Gordon Wintrob",
    "description": "Gordon Wintrob's Personal Site"
  },
  "plugins": {
    "metalsmith-metadata": {
      "books": "books.json"
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":collection/:title"
    },
    "metalsmith-collections": {
      "main": {
        "sortBy": "title"
      },
      "articles": {}
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    }
  }
}
